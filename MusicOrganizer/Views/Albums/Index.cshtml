@using MusicOrganizer.Models;
<h1> Music Organizer</h1>
@if (Model.Count == 0)
{
  <p> There are no albums added by this artist. </p>
}
<ul>
  @foreach(Album album in Model)
  {
    <li><a href='/albums/@album.Id'>@album.AlbumTitle</a></li>
  }
  </ul>
  
  <a href= "/albums/new">Add a new album.</a>

  <form action="/albums/delete" method="post">
    <button type="submit" name="button">Clear all albums</button>
  </form>